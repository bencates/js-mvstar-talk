    $(document).ready(function() {
      $('#new-status').submit(function(e) {
        e.preventDefault();

        $.ajax({
          url: '/status',
          type: 'POST',
          dataType: 'json',
          data: { text: $(this).find('textarea').val() },
          success: function(data) {
            $('#statuses').append('<li>' + data.text + '</li>');
            $(this).find('textarea').val('');
          }
        });
      });
    });

